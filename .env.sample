# Azure VoiceLive
AZURE_VOICELIVE_ENDPOINT=wss://<your-resource>.services.ai.azure.com/voice-live/realtime
AZURE_VOICELIVE_API_VERSION=2025-10-01
AZURE_VOICELIVE_MODEL=gpt-realtime


# Azure Speech Service (TTS + Avatar)
# Required for both regular TTS and Avatar TTS.
# Region must support Avatar TTS: eastus2, westus2, westeurope, northeurope,
#   southcentralus, southeastasia, swedencentral
AZURE_SPEECH_REGION=<your-speech-region>
# Full ARM resource ID from Azure Portal > Speech resource > Properties > Resource ID
# Format: /subscriptions/<sub-id>/resourceGroups/<rg>/providers/Microsoft.CognitiveServices/accounts/<name>
AZURE_SPEECH_SERVICE_ID=<your-full-arm-resource-id>

# Avatar TTS (set to true to enable the talking avatar)
AVATAR_ENABLED=false
AVATAR_CHARACTER=lisa
AVATAR_STYLE=casual-sitting
AVATAR_VOICE=en-US-AvaMultilingualNeural

# Azure Identity (Entra ID)
# Uses DefaultAzureCredential â€” no keys needed.
# For local dev, ensure you're logged in via `az login` or set:
# AZURE_CLIENT_ID=
# AZURE_TENANT_ID=

# GitHub Copilot SDK
COPILOT_GITHUB_TOKEN=<your-github-pat-with-copilot-scope>

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:3000

# Frontend
BACKEND_WS_URL=ws://localhost:8000/ws
BACKEND_API_URL=http://localhost:8000

# Session Management
SESSION_TTL_SECONDS=3600
MAX_SESSIONS_PER_USER=5
